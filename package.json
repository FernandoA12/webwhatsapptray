        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "name": "whatsapptray",
              "icon": "./src/assets/image/icon.png"
            }
          }
        }
      ]
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
